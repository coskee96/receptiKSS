<body>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Find Recepie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <i class="fas fa-signature"></i>
                        <label for="RecepieName">Recepie Name</label>
                        <input type="text" class="form-control" id="RecepieName" placeholder="French Salad">
                    </div>

                    <div class="form-group">
                        <i class="fas fa-flag "></i>
                        <label for="exampleFormControlSelect1">Recepie Origin</label>

                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>Select All</option>
                            <option>China</option>
                            <option>Italia</option>
                            <option>Serbia</option>
                            <option>England</option>
                            <option>France</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-star"></i>
                        <label for="exampleFormControlSelect2">Recepie Rating</label>
                        <input class="form-control" type="number" name="" id="" min="1" max="5">
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-blue" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-green">Find</button>
            </div>
        </div>
    </div>
</div>
<header id="header" class="header  ">

    <nav class="navbar  navbar-expand-lg navbar-light bg-light w-100 d-flex justify-content-lg-between">
        <div class="navbar-brand">
            <a href="/index"> <img class="nav__logo " src="/images/logo2.png" alt=""></a>
        </div>




        <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon "></span>
        </button>
        <ul class="nav__list collapse navbar-collapse d-lg-flex justify-content-lg-end" id="navbarNavAltMarkup">
            <div class="navbar-nav">


                    <a class="nav__anchor-link" href="<%=log.uL%>" ><i class="fas fa-user mr-2"></i><%=log.user%></a>
                    <a class="d-none" href="/user"><i class="fas fa-user mr-2 "></i>User </a>
                </li>
                <li class="nav__list-item nav-item nav-link "><a class="nav__anchor-link"
                                                                 href="<%=log.logI%>"><%=log.logO%></a></li>
                <li class="nav__list-item nav-item nav-link active"><a class="nav__anchor-link"
                                                                       href="/index">Home</a></li>
                <li class="nav__list-item nav-item nav-link" data-toggle="modal" data-target="#exampleModal">
                    Find Recepies</li>
            </div>
        </ul>


    </nav>
</header>

<main>

    <section class="cover__image cover__image-user--recepies">
        <h1 class="cover__image-text">Your Recepies</h1>
    </section>
    <div class="container d-flex justify-content-center my-5">
        <section class="layout-login d-flex  align-items-center bg-white w-100 py-5  mb-4 flex-column">

            <article>
                <form action="/edit/update" method="post" class="form-input post__recepie" enctype="multipart/form-data">
                    <div class="form-group mt-3">
                        <label for="name">Recepie Name</label>
                        <input placeholder="French Soup" class="form-control" value="<%=dataR[0].name%>" type="text" id="name" name="name">
                        <label for="type" >Recepie Type</label>
                        <select class="form-control" id="type" name="type"  >
                            <option><b><%=dataR[0].type%></b></option>
                            <option>China</option>
                            <option>Italia</option>
                            <option>Serbia</option>
                            <option>England</option>
                            <option>France</option>
                        </select>
                        <div class="form-group mt-3">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="ingredients" rows="10" name="desc"><%=dataR[0].description%></textarea>
                        </div>
                    </div>
                    <div class="d-flex justify-content-lg-between">


                        <label class="btn btn-blue m-0" for="upload-photo">Upload Photo</label>
                        <button class="btn btn-green btn-submit m-0" type="submit">Post</button>

                    </div>
                    <input class="d-none" type="file" name="photos" id="upload-photo"
                           accept="image/x-png,image/gif,image/jpeg" />

                </form>
            </article>
        </section>
    </div>

</main>

